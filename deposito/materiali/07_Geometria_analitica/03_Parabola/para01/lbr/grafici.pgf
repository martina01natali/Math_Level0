\newcommand{\puntia}{% 
    % Alcuni punti di una parabola.
    \disegno{
    \rcom{-5}{+5}{-4}{13}{gray!50, very thin, step=1}
    \foreach \pi in {
    % (-4, 22), 
    (-3, 13), (-2, 6), (-1, 1), 
    (0, -2), (1, -3), (2, -2), (3, 1), (4, 6), (5, 13)}
    \filldraw [Maroon!50!black] \pi circle (1.5pt);
    }
}

