\newcommand{\assec}{% Asse vuoto con l'indicazione dell'unità separata
    \disegnod{10}{
      \assex{-6.3}{6.3}{0}
      \draw[|-|] (0, .5) -- (1, .5) node[below, midway] {unità};
      \filldraw (0,0) circle (1.5pt) node [below] {0};
    }
}

