\newcommand{\asseb}{% Retta con numeri messi al posto giusto.
    \disegno{
      \draw [-] (-6,0) -- (6,0) node [below]  {$x$};
      \foreach \x in {-5, -3, -2, -1, 0, 1, 2, 3.5, 5}
        \filldraw (\x, 0) circle (1.5pt) node [below] {\x};
    }
}

