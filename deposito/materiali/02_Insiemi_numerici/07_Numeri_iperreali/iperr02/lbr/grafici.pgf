\newcommand{\provatelescopio}{% 
    % Esponenziali con basi diverse.
    \disegno{
    \rcom{-10}{+10}{-5}{5}{gray!50, very thin, step=1}
      \tkzInit[xmin=-10.3,xmax=+10.3,ymin=-5.3,ymax=+5.3]
      \tkzFct[domain=-10.3:+10.3]{(1./2)*x}
